<div class='booyah-box col-10 offset-1'>
  <h1><%= @place.name %></h1>
  <i><%= @place.address %></i>
  <br/><br/>
  <p><%= @place.description %></p>
  <div>
    <% if current_user && current_user == @place.user %>
      <%= link_to 'Edit this restaurant', edit_place_path(@place) %>
      <br/>
      <%= link_to 'Delete this restaurant', place_path(@place), method: :delete, data: {confirm: 'Are you sure you want to delete this place?'} %>
    <% end %>  
  </div>
</div>